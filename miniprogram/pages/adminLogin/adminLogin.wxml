<!--pages/adminLogin/adminLogin.wxml-->
<view class="mainn">
<van-cell-group>
  <van-field
    value="{{username}}"
    required
    clearable
    label="用户名"
    placeholder="请输入用户名"
    bind:change="onChange1"
  />

  <van-field
    value="{{password}}"
    type="password"
    label="密码"
    placeholder="请输入密码"
    required
    border="{{ false }}"
    bind:change="onChange2"
  />
</van-cell-group>
<view class="right">
  
</view>
<view class="right">
  <van-button color="linear-gradient(to right, #4bb0ff, #6149f6)" bindtap="adminLogin">确定</van-button>
</view>
</view>
<van-toast id="van-toast" />
